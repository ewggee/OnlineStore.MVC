@model LoginViewModel

<form asp-action="Login" method="post">
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Войти</button>
</form>